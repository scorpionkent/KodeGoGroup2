<%- include('./partials/header.ejs')%>
<body>
<%- include('./partials/nav.ejs') %>
<div class="hero">
  <div class="container col-xxl-8 px-4 py-5">
    <div class="d-flex justify-content-center">
       <form id="loginForm" action="/login/" method="POST" style="width: 40%;">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
        </div>
        <div class="pt-2">
          <button type="submit" class="btn btn-dark bg-gradient">Submit</button>
          <!-- <a class="text-white" href="/register">Register</a> -->
        </div>
      </form>
    </div>
    <% if (message) {%>
      <div class="d-flex justify-content-center">
        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert" style="width: 40%;">
          <strong><%= message%></strong>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
      <% } %>
  </div>
</div>
<%- include('./partials/footer.ejs')%>
